<%#optonal parameters
favorite? ||= false
on_add ||=''
on_remove ||= ''
on_id ||= 'on_favorites_star'
off_id ||= 'off_favorites_star'
label? ||= true
%>

<%tag :span, 
      :id=>on_id, 
      :onclick=>[page.toggle(on_id, off_id), on_add], 
      :style=>"cursor:pointer;#{'display:none;' if favorite?}", 
      :class=>'label',
      :title=>'Add to favorites' do%> 
      <%=image_tag 'grey_star'-%>
      <%='Add to favorites' if label?-%>
<%end%>
        
<%tag :span, 
      :id=>off_id, 
      :onclick=>[page.toggle(on_id, off_id), on_remove], 
      :style=>"cursor:pointer;#{'display:none;' unless favorite?}", 
      :class=>'label',
      :title=>'Remove from favorites' do%> 
    <%=image_tag 'yellow_star'%>
    <%='Add to favorites' if label?-%>
<%end%>
