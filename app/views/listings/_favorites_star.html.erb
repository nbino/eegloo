<%
#optional parameters
is_lit||=false
add_label||=false
%>

<%tag :span, 
      :id=>"off_star_#{id}", 
      :onclick=>[page.toggle("off_star_#{id}", "on_star_#{id}"), remote_function(:url=>listing_favorites_url(listing), :method=>:post)], 
      :style=>"cursor:pointer;#{'display:none;' if is_lit}", 
      :class=>'label',
      :title=>'Add to favorites' do%> 
      <%=image_tag 'grey__star.gif'-%>
      <%='Add to favorites' if add_label-%>
<%end%>
        
<%tag :span, 
      :id=>"on_star_#{id}", 
      :onclick=>[page.toggle("off_star_#{id}", "on_star_#{id}"), remote_function(:url=>listing_favorite_url(listing, 0), :method=>:delete) ], 
      :style=>"cursor:pointer;#{'display:none;' unless is_lit}", 
      :class=>'label',
      :title=>'Remove from favorites' do%> 
    <%=image_tag 'yellow__star.png'%>
    <%='Add to favorites' if add_label-%>
<%end%>
