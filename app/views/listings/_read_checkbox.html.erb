<%#optional parameters
read? ||= false
on_read ||=''
on_unread ||= ''
read_id ||= ''
unread_id ||= ''
label? ||= true
%>

<%=tag :span,
      :id=>unread_id, 
      :class=>'label',
      :onclick=>[page.toggle(unread_id, read_id), on_read], 
      :style=>"cursor:pointer;#{'display:none;' if read?}", 
      :title=>'Mark as read' do%>
      <%=image_tag 'unchecked.gif'-%>
      <%='Mark as read' if label?-%>  

      
<%=tag :span,
      :id=>read_id, 
      :class=>'label',
      :onclick=>[page.toggle(unread_id, read_id), on_read], 
      :style=>"cursor:pointer;#{'display:none;' unless read?}", 
      :title=>'Mark as unread' do%>
      <%=image_tag 'checked.gif'-%>
      <%='Mark as unread' if label?-%> 
